<%= form_for @travel_party, url: root_path, html: {multipart:true} do |f| %>
    <% if @travel_party.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@travel_party.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @travel_party.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% f.fields_for :non_registered_user do |builder| %>
        <p>
          <%= builder.label :content, "Question" %><br />
