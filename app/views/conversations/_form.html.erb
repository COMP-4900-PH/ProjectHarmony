<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <!--<%= f.label :recipients %> -->
       <%= f.select(:recipients, @users.collect {|p| [ p.name, p.id ] }, {:selected => params[:recipients]}, { multiple: true , class: "form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Subject", required: "require", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", required: "require", rows: 4  %>
    </div>
    <%= f.submit "Send Message", class: "btn btn-success" %>

<% end %>