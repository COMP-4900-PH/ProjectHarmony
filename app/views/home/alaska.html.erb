<!-- CAROUSEL SECTION -->
<div class="carousel slide" id="myCarousel" data-ride="carousel" data-wrap="false">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">

    <div class="item active">
      <div class="banner">
        <div class="container_wrap3">
          <h1>Connect before your cruise!</h1>
          <div class="offering">
            <h2>What can Project Harmony offer you?</h2>
            <h3>Find your cruise and connect with people going!</h3>
            <div class="real">
              <h4>Connection</h4>
              <div class="col-sm-6">
                <ul class="service_grid">
                  <i class="s1"> </i>
                  <li class="desc1 wow fadeInRight" data-wow-delay="0.4s">
                    <p><b>Events: </b>Find events happening on your cruise, join, and communicate with passengers that
                      have similar interests. Or create your own event that others can join. Want to start a poker
                      tournament? No problem!</p>
                  </li>
                  <div class="clearfix"></div>
                </ul>
              </div><!-- COL-SM-6 -->
              <div class="col-sm-6">
                <ul class="service_grid">
                  <i class="s2"> </i>
                  <li class="desc1 wow fadeInRight" data-wow-delay="0.4s">
                    <p><b>Search: </b>Look for the perfect cruise for you by using the search bar below. Enter a name,
                      place, or event, and then a date range to find a cruise that matches your needs. It's that easy!
                    </p>
                  </li>
                  <div class="clearfix"></div>
                </ul>
              </div><!-- COL-SM-6 -->
              <div class="clearfix"></div>
            </div><!-- REAL -->
          </div><!-- OFFERING -->
        </div> <!-- CONTAINER WRAP3 -->
      </div><!-- BANNER -->
    </div><!-- ITEM ACTIVE -->


    <div class="item">
      <div class="banner2">
        <div class="container_wrap3">
