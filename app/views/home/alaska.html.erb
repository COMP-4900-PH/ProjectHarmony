<!-- SEARCH SECTION -->
<div class="content_top">
  <div class="container">
    <div class="col-md-12 search-bar">
      <!--<form>-->
      <!--<input style="width:25%" type="text" value="Keyword, name, ..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Keyword, name, date, ...';}">-->
      <!--<input style="width:25%" type="date" id="datepickerStart" required="true" name="event[start_date]">-->
      <!--<input style="width:25%" type="date" id="datepickerStart" required="true" name="event[start_date]">-->
      <!--<label class="btn1 btn-2 btn-2g"><input name="submit" type="submit" id="submit" value="Search"></label>-->
      <!--</form>-->

      <%= search_form_for @search, url: root_path, method: :post do |f| %>
          <% if false %>
              <%= f.label :cruise_ship_name_or_cruise_ship_company_or_destination_identifier_cont %>
          <% end %>
          <%= f.text_field :cruise_ship_name_or_cruise_ship_company_or_destination_identifier_cont, :style => 'width:35%', placeholder: "Destination, ship name, company..." %>
          <% if false %>
              <%= f.label :departure_date_gteq, "Departure Date Between" %>
          <% end %>
          <%= f.text_field :departure_date_gteq, "datepicker" => true, :style => 'width:20%', :class => 'sdate', placeholder: "Date From" %>
          <% if false %>
              <%= f.label :return_date_lteq, "and" %>
          <% end %>
          <%= f.text_field :return_date_lteq, "datepicker" => true, :style => 'width:20%', :class => 'sdate', placeholder: "Date To" %>
          <label class="actions btn1 btn-2 btn-2g"><%= f.submit "Search" %></label>
      <% end %>

    </div><!-- COL-MD-12 -->

  </div><!-- CONTAINER -->
</div> <!-- CONTENT TOP -->
<!-- END SEARCH SECTION -->

<h1 class="regionTitle">Alaskan Cruises</h1>

<div class="content_middle">
  <!-- SAILING CARDS SECTION -->
  <div class="container">
    <div class="middle_grid wow fadeInUp" data-wow-delay="0.4s">
      <% @sailings.where("destination_identifier = 'Alaska'").each  do |sailing| %>
          <div class="col-md-4">
            <div class="grid1">
              <div class="view view-first">
                <div class="index_img1"><%= image_tag "cruises/#{sailing.image}", :size => "500x170" ,:class => "ship-image-card" %></div>
                <div class="mask">
                  <h2 style="text-align: center">Cruise Info<br/><%= sailing.cruise_ship_name %></h2>
                  <div class="inner_wrap1">
                    <h4>Registered Events</h4>
                    <div class="scrolling">
                      <table class="table">
                        <thead>
                        <tr>
                          <th>Event</th>
                          <th>Description</th>
                          <th>Participants</th>
                        </tr>
                        </thead>
                        <tbody>

                        <% sailing.events.each do |event| %>
                            <tr>
                              <td><%= event.event_name %></td>
                              <td><%= event.description %></td>
                              <td><%= event.max_participants %></td>
                            </tr>
                        <% end %>
                        <% if sailing.events.blank? %>
                            <tr>
                              <td>No Events are currently listed</td>
                            </tr>
                        <% end %>

                        </tbody>
                      </table>
                    </div>
                    <label class="btn1 btn-3 btn-2g">
                      <%= link_to 'Full Details', sailing %>
                    </label>
                    </br>
                    </br>
                    <h5><i>Register and join a cruise to partake in events!</i></h5>
                  </div>
                  <div class="clearfix"></div>
                  </ul>
                </div>
              </div>
              <div class="inner_wrap">
                <ul class="star1">
                  <li class="module_left">
                    <!--<h3><%= sailing.cruise_ship_company %></h3>-->
                    <h2><%= sailing.cruise_ship_name %></h2>
                    <h4>No. of Cruisers: 412</h4>
                    <!--<h4>Region: <%= sailing.destination_identifier %> </h4>-->
                    <!--<h4>Port of Origin: <%= sailing.port_of_origin %> </h4>-->
                    <% sailLength = (sailing.return_date.to_time.to_i - sailing.departure_date.to_time.to_i) / 60 / 60 / 24 %>
                    <h4>Departure: <%= sailing.departure_date.strftime("%B %d, %Y") %> for  <%= sailLength %>
                      days</h4>
                    <!--<h4>Return: <%= sailing.return_date.strftime("%B %d, %Y") %></h4>-->
                    <h2>Who's On Board?</h2>
                    <h4>Languages: <%= image_tag "lang_iconCAN.png" %>&nbsp;30%, <%= image_tag "lang_iconCHI.png" %>&nbsp;27%</h4>
                    <h4>Demographics:</h4>
                    <h5>50+ 47%</h5>
                    <h5>35-45 22%</h5>
                    <h5>25-35 17</h5>
                    <h4>Top Travellers: Yoda, Bobbafet, Vader</h4>
                    <!--<h4>Total of <b style="font-size: 25px; text-decoration: underline;">35</b> families going from Project Harmony!</h4>-->
                    <!--<h4><b style="font-size: 25px; text-decoration: underline;">112</b> Singles going from Project Harmony!</h4>-->
                  </li>
                </ul>
              </div><!-- INNER_WRAP -->
            </div><!-- GRID1 -->
          </div><!-- COL-MD-6 -->
      <% end %>
    </div><!-- MIDDLE GRID -->
  </div><!-- CONTAINER -->
  <!-- END SAILING SECTION -->
</div>
<!-- END SAILING SECTION -->