
<%= form_for @event, url: "/events/#{event.id}/edit", html: {multipart:true, method: "PUT"} do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="actions">
      <div class="container-fluid event-form event-form2">
        <input type="hidden" name="event[creator_id]" value="<%= current_user.id %>">
        <div class="row">
          <div class="col-md-9">
            <div class="form-group">
              <label for="eventname">Event Name</label>
              <input type="text" name="event[event_name]" value="<%= event.event_name %>" required="true" class="form-control" id="eventname">
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-group">
              <label for="eventimage">Event Image</label>
              <!--<input type="file" name="event[event_image]" class="form-control" id="eventimage" accept="image/*">-->
              <%= f.file_field :image, class: 'form-control' %>
            </div>
          </div>
        </div>
        <!-- START DATE -->
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label for="startDate ">Start Date/Time</label><br>
              <input type="datetime-local" id="datepickerStart" value="<%= event.start_date.strftime("%FT%R")%>" required="true" name="event[start_date]" class="form-control">
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label for="endDate ">End Date/Time</label><br>
              <input type="datetime-local" id="datepickerEnd" value="<%= event.end_date.strftime("%FT%R")%>" required="true" name="event[end_date]" class="form-control">
            </div>
          </div>
          <!--<div class="col-md-2">-->
          <!--<div class="form-group">-->
          <!--<label for="time ">Start Time</label><br>-->
          <!--<input type="time" id="timepicker1" required="true" name="event[start_time]" class="form-control">-->
          <!--</div>-->
          <!--</div>-->

          <!--<div class="col-md-2">-->
          <!--<div class="form-group">-->
          <!--<label for="time ">End Time</label><br>-->
          <!--<input type="time" id="timepicker2" required="true" name="event[end_time]" class="form-control">-->
          <!--</div>-->
          <!--</div>-->
        </div>

        <!-- LOCATION -->
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label for="location">Location</label><br>
              <input type="text" id="location" value="<%= event.location %>" required="true" name="event[location]" class="form-control">
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <label for="ageGroup">Age Group</label><br>
              <input type="text" id="ageGroup"  name="event[ageGroup]" class="form-control">
            </div>
          </div>

          <div class="col-md-2">
            <div class="form-group">
              <label for="max">Max Participants</label><br>
              <input type="text" id="max" value="<%= event.max_participants %>" name="event[max_participants]" class="form-control">
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label for="sailing">Sailing</label><br>
              <%= select_tag "event[sailing_id]", options_from_collection_for_select(@sailings, "id", "cruise_ship_name", selected: event.sailing_id),  {:include_blank => "select",:class => "form-control", :required => "true"}  %>
            </div>
          </div>
        </div>

        <!-- DESCRIPTION -->

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" required="true" name="event[description]" rows="5" id="description"><%= event.description%></textarea>
            </div>
          </div>
        </div>
        <input class="btn btn-success form-control" type="submit" name="commit" value="Update Event">
      </div>
    </div>
    </div>
<% end %>
