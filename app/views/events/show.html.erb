
<style>
  tr.spaceUnder > td
  {
    padding-bottom: 1em;
  }
</style>

<script >
    function pop(id){
      $('.pop').webuiPopover({
        type:'async',
        url:'/popover/' + id,
        content:function(data){
          var html = '<h5 style="text-align: center">Recent Sailings and Events Joined</h5><table class="table"><tr><th>Event</th><th>Cruise</th></tr>';
          for(var key in data){html+='<tr><td>'+ data[key].event_name+'</td>' + '<td>' + data[key].cruise_ship_name +'</td></tr>';}
          html+='</table>';
          return html;
        }, trigger:'hover'
      });
    }
</script>

<div class="dashboard">
  <div class="container">
    <div class="dashboard-info">
      <div class="row">
        <div class="col-md-2">
          <!-- ATTENDEES -->
          <table style="margin-left: 1em; margin-top: 1em">
            <% @users.each do |u|%>
                <tr class="spaceUnder">
                  <td>
                    <a href="/profile/<%= u.user_id %>">
                      <%= image_tag u.avatar.url(:small), :class => "img-responsive pop", 'onmouseover'=> "pop(#{u.user_id})" ,'data-title' => "#{u.first_name} #{u.last_name}"  , 'data-placement'=> 'horizontal' %></a></td>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>

        <div class="col-md-7">
          <!-- EVENT NAME -->
          <div class="row" style="margin-top: 1em">
            <div class="col-md-6">
             <h2><%= @event.event_name %></h2>
            </div>
            <div class="col-md-6" style="text-align: center">
              <%= button_to 'Join This Event', "/event_register/create/#{@event.id}", :method=>:post %>
              <!--<a href="" class="btn btn-success">Join and RSVP</a>-->
            </div>
          </div>

          <!-- DETAILS -->
            <hr class="hr-line" style="margin-top: 0">
            <div class="row">
              <div class="col-md-1">
                <i class="fa fa-calendar" aria-hidden="true"></i>
              </div>
              <div class="col-md-11">
                <h3> <%= @event.start_date.to_formatted_s(:long) %> - <%=@event.end_date.to_formatted_s(:long)%></h3>
              </div>
            </div>
            <div class="row">
              <div class="col-md-1">
                <i class="fa fa-thumb-tack" aria-hidden="true"></i>
              </div>
              <div class="col-md-11">
                <h3><%= @event.location %></h3>
              </div>
              <div class="col-md-1">
                <i class="fa fa-envelope-o" aria-hidden="true"></i>
              </div>
              <div class="col-md-11">
                <a href=""><span class="ship-name"><%= User.find_by_id(@event.creator_id).name%></span></a> <span> - organizer </span>
              </div>

              <!-- DESCRIPTION -->
              <p>
                <%= @event.description%>
              </p>
              <br>

            </div>
          <hr class="hr-line">
              <h2 style="text-align: center"> comments </h2>
          <hr class="hr-line">

          <table class="table">
            <tr>
              <td><img src="https://placeimg.com/50/50/people" alt="..."><br>Craig</td>
              <td class="sailing-info">
                <p class="comment">Hello! I will be on this cruise from May 2-10 and I very excited to attend. I've been in
                  a mexican fiesta before and It was fantastic. Looking Forward to this event</p>
                <p class="comment comment-date-time" align="right">
                  Sunday, May 1, 2016 , 5:30 PM
                </p>
              </td>
            </tr>
            <tr>
              <td><img src="https://placeimg.com/50/50/people" alt="..."><br>Salvador</td>
              <td class="sailing-info">
                <p class="comment">Hi Craig, Good to hear. See you at the cruise!</p>
                <p class="comment comment-date-time" align="right">
                  Sunday, May 4, 2016 , 5:30 PM
                </p>
              </td>
            </tr>
            <tr>
              <td><img src="https://placeimg.com/50/50/people" alt="..."><br>Emy</td>
              <td class="sailing-info">
                <p class="comment">I will be in this cruise by May 13, Is it possible to extend the date? Really want
                  to join this event.</p>
                <p class="comment comment-date-time" align="right">
                  Sunday, May 4, 2016 , 5:30 PM
                </p>
              </td>
            </tr>
          </table>

        </div>
        <div class="col-md-3">
          <%= image_tag @event.image.url(:thumb) , class: 'avatar'%><br><br><br>
          <div style="text-align: center;">
            <h3>Cruise</h3>
            <a href="/sailings/<%= @event.sailing_id%>"><span class="ship-name"><%= Sailing.find_by_id(@event.sailing_id).cruise_ship_name%></span></a>

          </div>
          <br><br>
          <div style="text-align: center">
            <%= form_tag(new_conversation_path) do %>
                <% @users.each do |u|%>
                  <input name="recipient[]" type="hidden" value="<%= u.user_id %>"/>
                <% end %>
                <%= submit_tag("Message Vacationers", class: "btn btn-primary") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.webui-popover/1.2.1/jquery.webui-popover.min.js"></script>