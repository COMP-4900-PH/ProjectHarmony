<div class="header">
  <div class="col-sm-8 header-left">
    <div class="logo">
      <a href="index.html"><%= image_tag"newlogo.png" %></a>
    </div>
    <div class="menu">
      <a class="toggleMenu" href="#"><%= image_tag "nav.png" %></a>
      <ul class="nav" id="nav">
        <li class="active"><a href="index.html">Home</a></li>
        <li><a href="/sailings">Sailings</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/search">Search</a></li>
        <li><a href="/dashboard">My Dashboard</a></li>
        <div class="clearfix"></div>
      </ul>
    </div>
    <div class="search-box">
      <div id="sb-search" class="sb-search">
        <form action="/forum/" accept-charset="UTF-8" method="get">
          <input class="sb-search-input" placeholder="Enter your search term..." type="search" name="q" id="q" required="required">
          <input class="sb-search-submit" type="submit" value="">
          <span class="sb-icon-search"> </span>
        </form>
      </div>
    </div>
    <script>
      new UISearch( document.getElementById( 'sb-search' ) );
    </script>
    <div class="clearfix"></div>
  </div>
  <div class="col-sm-4 header_right">
    <div id="loginContainer">
      <% if !user_signed_in? %>
          <%= image_tag "login.png" %><%= link_to "Login", new_user_session_path %>
      <% end %>
      <% if user_signed_in? %>
          Hello <%= current_user.name %>, <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="clearfix"></div>
</div>